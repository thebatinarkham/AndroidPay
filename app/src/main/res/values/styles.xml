<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="materialButtonStyle">@style/AppTheme.Button</item>


    </style>


    <style name="AppTheme.AppBarOverlay" >
        <item name="android:fontFamily">@string/font_family_thin</item>
        <item name="titleTextStyle">@string/font_family_thin</item>
        <item name="titleTextAppearance">@string/font_family_thin</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">?attr/shapeAppearanceOverlay</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="rippleColor">@android:color/transparent</item>

    </style>

    <style name="circularImageView"  parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:tint">@color/red_500</item>
    </style>
</resources>